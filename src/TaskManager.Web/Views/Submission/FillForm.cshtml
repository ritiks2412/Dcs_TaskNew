@model TaskManager.Web.Models.FormDtos

<h2>Fill Form - @Model.Title</h2>

<form method="post" asp-action="SubmitForm">
    <input type="hidden" name="formId" value="@Model.Id" />

    <div>
        <label>Enter Answers (Matching Form Fields)</label>
        <textarea name="answers" class="form-control" rows="6" required>
@Model.Fields
        </textarea>
    </div>
    <br />
    <button class="btn btn-success" type="submit">Submit</button>
</form>
