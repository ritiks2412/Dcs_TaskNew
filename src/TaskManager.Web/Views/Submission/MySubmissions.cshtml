@model List<TaskManager.Web.Models.SubmissionDto>

<h2 class="mt-4">My Submissions</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">You haven't submitted any forms yet.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Form Title</th>
                <th>Answers</th>
                <th>Status</th>
                <th>Submitted On</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sub in Model)
            {
                <tr>
                    <td>@sub.FormTitle</td>
                    <td>@sub.Answers</td>
                    <td>
                        @if (sub.Status == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else if (sub.Status == "Rejected")
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </td>
                    <td>@sub.CreatedAt.ToString("dd-MMM-yyyy hh:mm tt")</td>
                </tr>
            }
        </tbody>
    </table>
}
