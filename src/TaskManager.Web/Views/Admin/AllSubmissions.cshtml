@model List<TaskManager.Application.DTOs.Submission.SubmissionDto>
@{
    ViewData["Title"] = "Manage Submissions";
}

<h2>Manage Submissions</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No submissions found.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Submission ID</th>
                <th>Form Title</th>
                <th>User</th>
                <th>Status</th>
                <th>Submitted On</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sub in Model)
            {
                <tr>
                    <td>@sub.Id</td>
                    <td>@sub.FormTitle</td>
                    <td>@sub.UserName</td>
                    <td>
                        @if (sub.Status == "Approved")
                        {
                            <span class="badge bg-success">Approved</span>
                        }
                        else if (sub.Status == "Rejected")
                        {
                            <span class="badge bg-danger">Rejected</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                    </td>
                    <td>@sub.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @if (sub.Status == "Pending")
                        {
                            <form method="post" asp-action="Approve" asp-route-id="@sub.Id" class="d-inline">
                                <button class="btn btn-sm btn-success">Approve</button>
                            </form>
                            <form method="post" asp-action="Reject" asp-route-id="@sub.Id" class="d-inline" style="margin-left:5px;">
                                <button class="btn btn-sm btn-danger">Reject</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-muted">No Actions</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
